
<!-- ======================================
SAMPLE SECTION HOME PAGE
=========================================== -->
<section class="sample-section light-grey-bg container padded" data-anim="scroll">
  <div class="cols-2">
    <div class="text-content">

      <!-- TEXT CONTENT -->
      <div>
        {% if section.settings.subheading != blank %}
        <h3 class="small-caps" data-anim="slide" data-anim-order="1">
          {{ section.settings.subheading }}
        </h3>
        {% endif %}
        {% if section.settings.title != blank %}
          <h2 class="h1" data-break="lines-masked">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.desc != blank %}
          <div class="desc" data-break="lines-masked-desc">
            {{ section.settings.desc }}
          </div>
        {% endif %}
      </div>

      <!--  BUTTON -->
      {% if section.settings.button_text != blank %}
        <div class="hide-mobile" data-anim="slide" data-anim-order="6">
          <a href="{{ section.settings.button_url }}" class="btn btn--grey">
            {{ section.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>
    <div>
      <!-- IMAGE COLUMN -->
      {%- assign lazy_image = section.settings.image -%}
      {% assign alt_text = section.settings.image_alt | escape %}
      {%- assign img_url = lazy_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
      <img class="lazyload"
          data-src="{{ img_url }}"
          data-widths="[360, 540, 720, 900, 1080, 1600]"
          data-aspectratio="{{ lazy_image.aspect_ratio }}"
          data-sizes="auto"
          alt="{{ alt_text }}">

        <!-- MOBILE BUTTON -->
        {% if section.settings.button_text != blank %}
          <div class="show-mobile">
            <a href="{{ section.settings.button_url }}" class="btn btn--grey">
              {{ section.settings.button_text }}
            </a>
          </div>
        {% endif %}
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Sample Section",
    "settings": [
      {
        "id": "title",
        "type": "textarea",
        "label": "Heading"
      },
      {
        "id": "subheading",
        "type": "textarea",
        "label": "Subheading"
      },
      {
        "id": "desc",
        "type": "richtext",
        "label": "Description"
      },
      {
        "id": "button_url",
        "type": "url",
        "label": "Button URL"
      },
      {
        "id": "button_text",
        "type": "text",
        "label": "Button Text"
      },
      {
        "id": "image",
        "type": "image_picker",
        "label": "Image"
      },
      {
        "id": "image_alt",
        "type": "text",
        "label": " Image Alt",
        "info": "Write a brief description of this image to improve search engine optimization (SEO) and accessibility for visually impaired customers."
      }

    ],
    "presets": [
      {
        "name": "Sample Section",
        "category": "Sections"
      }
    ]
  }

{% endschema %}
