/* --------------------------------------------------------------------------
Colors
-----------------------------------------------------------------------------*/
$black: #000000;
$blackButton: #000000;
$darkGrey: #353536;
$shopHover: #DFDFDF;
$grayButton: #E5E6E7;
$darkGreyBackground: #ECEDEE;
$midGreyBackground: #F1F1F1;
$lightGreyBackground: #F8F8F8;
$white: #FFF;

$primaryBgColor: $white;
$primaryTextColor: $black;
$primaryAnchorColor: $primaryTextColor;

$secondaryBgColor: $black;
$secondaryTextColor: $white;

$borderColor: $black;
$border: .05rem solid $borderColor;

$ease: cubic-bezier(0.25, 0.46, 0.45, 0.94);

/* --------------------------------------------------------------------------
Mixins
-----------------------------------------------------------------------------*/
%secondarySection {
  background-color: $secondaryBgColor;
  color: $secondaryTextColor;
}

.light-grey-bg {
  background: $lightGreyBackground;

}

.mid-grey-bg {
  background: $midGreyBackground;
}

.dark-grey-bg {
  background: $darkGreyBackground;
}

/* --------------------------------------------------------------------------
Responsive Mixins
-----------------------------------------------------------------------------*/

/* Adjust breakpoints below if needed  */
$tablet-width: 768px;
$mobile-sm-width: 460px;
$desktop-width: 1024px;
$desktop-lg-width: 1250px;
$monitor-width: 1440px;

@mixin mobile-sm-only {
  @media (max-width: #{$mobile-sm-width}) {
    @content;
  }
}

@mixin mobile-only {
  @media (max-width: #{$tablet-width}) {
    @content;
  }
}

@mixin tablet-down {
  @media (max-width: #{$desktop-width}) {
    @content;
  }
}

@mixin tablet-only {
  @media (max-width: #{$desktop-width}) and (min-width: #{$tablet-width + 1}) {
    @content;
  }
}

@mixin tablet-up {
  @media (min-width: #{$tablet-width + 1}) {
    @content;
  }
}

@mixin desktop-up {
  @media (min-width: #{$desktop-width + 1}) {
    @content;
  }
}

@mixin desktop-sm-down {
  @media (max-width: #{$desktop-lg-width}) {
    @content;
  }
}

@mixin desktop-sm-only {
  @media (min-width: #{$desktop-width + 1}) and (max-width: #{$desktop-lg-width}) {
    @content;
  }
}

@mixin desktop-lg-up {
  @media (min-width: #{$desktop-lg-width + 1}) {
    @content;
  }
}

@mixin monitor-up {
  @media (min-width: #{$monitor-width + 1}) {
    @content;
  }
}

/* --------------------------------------------------------------------------
Hide / Show
-----------------------------------------------------------------------------*/
.show-tablet-down {
  display: none;
  @include tablet-down {
    display: block;
  }
}

.hide-tablet-down {
  @include tablet-down {
    display: none !important;
  }
}

.show-mobile {
  display: none;
  @include mobile-only {
    display: block;
  }
}

.hide-mobile {
  @include mobile-only {
    display: none !important;
  }
}

.hide {
  display: none;
}

/* Text meant only for screen readers. */
.screen-reader-text {
  border: 0;
  clip: rect(1px, 1px, 1px, 1px);
  clip-path: inset(50%);
  height: 1px;
  margin: -1px;
  overflow: hidden;
  padding: 0;
  position: absolute;
  width: 1px;
  word-wrap: normal !important;
}
