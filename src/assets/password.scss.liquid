body {
  text-align: center;


}

.container {
  padding-top: 14rem;
  padding-bottom: 14rem;
  max-width: 50rem;
  margin-left: auto;
  margin-right: auto;
}
h2 {
  margin-bottom: 3rem;
}
h4 {
  margin-bottom: 2rem;
}
input {
  margin-bottom: 2rem;
}

.use-password-link {
  margin-top: 4rem;
  font-size: 1.3rem;
  margin-bottom: 2rem;
  letter-spacing: 0;
  text-decoration: underline;
}


.login-popup {
  position: fixed;
  opacity: 0;
  visibility: hidden;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: white;
  transition: all .3s ease-in-out;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  max-width: unset;
  &.open {
    opacity: 1;
    visibility: visible;
  }
  form {
    width: 100%;
  }
}
